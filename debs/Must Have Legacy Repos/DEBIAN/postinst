#!/bin/bash

# List of repository URLs to add to Cydia
REPO_LIST=(
    "https://poomsmart.github.io/repo"
)

# Cydia sources directory
CYDIA_SOURCES_DIR="/var/mobile/Library/Cydia/"

# Loop to add each repository URL to Cydia
for REPO_URL in "${REPO_LIST[@]}"; do
    echo "$REPO_URL" >> "$CYDIA_SOURCES_DIR/sources.list"
done

# Update Cydia sources
su mobile -c "uicache --all"
su mobile -c "killall -SIGTERM Cydia"

exit 0